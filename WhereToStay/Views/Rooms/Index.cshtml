@model IEnumerable<WhereToStay.Models.Room>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.room_size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.room_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.room_size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.room_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.room_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.room_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.room_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
